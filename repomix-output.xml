  echo ""
  echo "Options:"
  echo "  -h, --help               Display this help message"
  echo "  -H, --host <hostname>    API host (default: localhost)"
  echo "  -p, --port <port>        API port (default: 8080)"
  echo "  -b, --base-path <path>   Base API path (default: /api/v1/debug)"
  echo "  -v, --verbose            Show verbose output"
  echo "  -c, --continue           Continue on error (don't exit)"
  echo ""
}

# Parse command line arguments
while [[ $# -gt 0 ]]; do
  case "$1" in
    -h|--help)
      show_usage
      exit 0
      ;;
    -H|--host)
      API_HOST="$2"
      shift 2
      ;;
    -p|--port)
      API_PORT="$2"
      shift 2
      ;;
    -b|--base-path)
      API_BASE_PATH="$2"
      shift 2
      ;;
    -v|--verbose)
      VERBOSE=true
      shift
      ;;
    -c|--continue)
      EXIT_ON_ERROR=false
      shift
      ;;
    *)
      echo -e "${RED}Unknown option: $1${NC}"
      show_usage
      exit 1
      ;;
  esac
done

# Construct the base URL
API_URL="http://${API_HOST}:${API_PORT}${API_BASE_PATH}"

# Check for curl
if ! command -v curl &> /dev/null; then
  echo -e "${RED}Error: curl is required but not installed${NC}"
  exit 1
