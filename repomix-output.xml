        let sync_results = join_all(sync_futures).await;
        for result in sync_results {
            sync_times.push(result.unwrap());
        }
        
        // Report progress
        if epoch % 10 == 0 || epoch == NUM_EPOCHS {
            println!("Published and verified {}/{} trust bundle epochs", epoch, NUM_EPOCHS);
        }
