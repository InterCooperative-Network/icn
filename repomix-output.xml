pub fn handle_execution_error(
    error: &ExecutionError,
    proposal_id: &ProposalId,
) -> Result<ErrorReceipt, GovernanceError> {
    // 1. Log the error
    log_execution_error(error, proposal_id)?;
    
    // 2. Create error receipt
