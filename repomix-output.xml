    pub async fn store_secret_with_indexing<V: serde::Serialize + Send + Sync>(
        &self,
        key: &str,
        value: &V,
        index_name: &str,
        metadata: Option<&str>,
        extraction: TermsExtraction
    ) -> StorageResult<()> {
        if let Some(index) = &self.secure_index {
            index.store_and_index(index_name, key, value, metadata, extraction).await
        } else {
