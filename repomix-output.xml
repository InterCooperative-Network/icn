    let p99_idx = (timings.len() as f64 * 0.99) as usize;
    
    let p50 = sorted_timings[p50_idx];
    let p95 = sorted_timings[p95_idx];
    let p99 = sorted_timings[p99_idx];
    
    println!("{} ({} operations):", operation, count);
    println!("  - Average: {:?}", avg);
    println!("  - Min: {:?}", min);
    println!("  - Max: {:?}", max);
    println!("  - p50: {:?}", p50);
