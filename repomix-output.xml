check_workspace_deps() {
  if grep -q "workspace = true" "$1"; then
    echo -e "${GREEN} $1 uses workspace dependencies${NC}"
    return 0
  else
    echo -e "${YELLOW}WARNING: $1 may not be using workspace dependencies${NC}"
