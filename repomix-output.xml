  local endpoint="$1"
  local description="$2"
  
  echo -e "Testing endpoint: ${YELLOW}${endpoint}${NC} (${description})"
  
  local full_url="${API_URL}${endpoint}"
  local response
  local status_code
  
  # Make the API call and capture both status code and response
  if $VERBOSE; then
    echo -e "Request URL: ${full_url}"
