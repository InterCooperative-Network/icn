        let root_data = "Concurrent Root DAG Node".as_bytes().to_vec();
        let root_cid = dag_manager.create_node(&root_data, vec![]).await.unwrap();
        node_cids.push(root_cid);
        
        // Create DAG nodes with concurrent operations
