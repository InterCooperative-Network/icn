        &[
            ThreatType::DoubleSpendAttempt,
            ThreatType::UnauthorizedAccess,
            ThreatType::AbnormalVotingPattern,
            ThreatType::ResourceExhaustion,
        ],
    )?;
    
    // Start monitoring service
    security_monitor.start_monitoring(federation_id)?;
    
    Ok(())
}
