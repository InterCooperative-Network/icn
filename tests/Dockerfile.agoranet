FROM node:18-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY tests/package.json .
RUN npm install

# Copy the mock AgoraNet implementation
COPY tests/mock_agoranet.js .

# Expose the port
EXPOSE 8080

# Set health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=5s --retries=3 \
    CMD wget -q -O- http://localhost:8080/api/health || exit 1

# Run the mock server
CMD ["node", "mock_agoranet.js"] 