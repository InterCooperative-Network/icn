FROM rust:1.75

WORKDIR /app

# Copy the source code
COPY . .

# Build the mock runtime service
RUN cargo build --release --bin mock-runtime

# Expose the port
EXPOSE 8081

# Set health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8081/health || exit 1

# Run the mock runtime
CMD ["./target/release/mock-runtime"] 